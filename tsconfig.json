{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "@playwright/test"]
  },
  "include": [
    "tests/**/*",
    "helpers/**/*",
    "lib/**/*",
    "reporters/**/*",
    "scripts/**/*",
    "fixtures/**/*",
    "pages/**/*",
    "recording/**/*",
    "types.d.ts"
  ],
  "exclude": ["node_modules"]
}
