{
  "name": "melosys-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Melosys using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:run": "vitest run",
    "test:all": "npm run test:unit:run && npm test",
    "codegen": "playwright codegen http://localhost:3000/melosys/",
    "show-report": "playwright show-report",
    "show-trace": "playwright show-trace",
    "open-videos": "open test-results/*/video.webm || explorer test-results\\*\\video.webm",
    "open-screenshots": "open test-results/*/*.png || explorer test-results\\*\\*.png",
    "clean-results": "rm -rf test-results/ playwright-report/"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing"
  ],
  "author": "NAV Melosys Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@vitest/ui": "^1.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "oracledb": "^6.3.0"
  }
}
